<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">

    <persistence-unit name="tp_product">
        <class>org.example.Product</class>
        <!-- on ajoutera les sous-classes ensuite -->

        <properties>
            <!-- Connexion Ã  MySQL -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tp_product?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <!-- Hibernate config -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
