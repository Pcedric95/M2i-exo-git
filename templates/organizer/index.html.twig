{% extends 'base.html.twig' %}

{% block title %}Organizer index{% endblock %}

{% block body %}
    <h1>Organizer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for organizer in organizers %}
            <tr>
                <td>{{ organizer.id }}</td>
                <td>{{ organizer.name }}</td>
                <td>{{ organizer.email }}</td>
                <td>
                    <a href="{{ path('app_organizer_show', {'id': organizer.id}) }}">show</a>
                    <a href="{{ path('app_organizer_edit', {'id': organizer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_organizer_new') }}">Create new</a>
{% endblock %}
