{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <ul>
        {% for post in posts %}
            <li>
                <strong>{{ post.title }}</strong> — {{ post.createdAt|date('Y-m-d H:i') }}
                <br>
                {{ post.content }}
            </li>
        {% else %}
            <li>Aucun article trouvé.</li>
        {% endfor %}
    </ul>
{% endblock %}
