{% extends 'base.html.twig' %}


{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des articles</h1>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Créé le</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td>{{ post.createdAt|date('Y-m-d H:i') }}</td>
                    <td>
                        <a href="{{ path('post_show', { id: post.id }) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="#" class="btn btn-warning">Modifier</a>
                        <a href="#" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun article trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            <a href="#" class="btn btn-primary">Créer un nouvel article</a>
        </div>
    </div>
{% endblock %}
